{
  "name": "@stayradiated/trousseau",
  "version": "1.0.0",
  "description": "Node.js interface to use `trousseau` key-value store",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "ava",
    "tidy": "xo --fix",
    "build": "del-cli dist && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stayradiated/kc.git"
  },
  "keywords": [
    "trousseau",
    "file",
    "key-value",
    "encrypted",
    "store"
  ],
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stayradiated/kc/issues"
  },
  "homepage": "https://github.com/stayradiated/kc#readme",
  "devDependencies": {
    "@stayradiated/jsconfig": "1.10.0",
    "ava": "3.15.0",
    "del-cli": "4.0.0",
    "typescript": "4.3.4",
    "xo": "0.40.2"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ],
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
